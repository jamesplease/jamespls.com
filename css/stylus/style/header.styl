header
  width 100%
  max-width 900px
  margin 100px auto 100px

  h1
    margin 0
    text-align center

    a
      font-size 35px
      font-weight 300
      color #dc8ab9
      background -webkit-linear-gradient(#fb72a4, #bba3ce)
      -webkit-background-clip text
      -webkit-text-fill-color transparent

@media (max-width: 600px)
  header
    margin 50px auto 50px
