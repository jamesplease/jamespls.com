header
  width 100%
  max-width 900px
  margin 60px auto 30px

  h1
    margin 0
    text-align center

    a
      font-size 35px
      font-weight 400
      font-family 'Droid Serif', serif
      color #dc8ab9
      background -webkit-linear-gradient(#fb72a4, #bba3ce)
      -webkit-background-clip text
      -webkit-text-fill-color transparent
